    "lint": "eslint .",
    "check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "parse-numeric-range": "1.3.0"
  },
  "peerDependencies": {
    "shiki": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "25.0.3",
    "@typescript-eslint/eslint-plugin": "8.50.0",
    "@typescript-eslint/parser": "8.50.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "husky": "8.0.2",
    "jsdom": "^27.3.0",
    "lint-staged": "13.1.0",
    "prettier": "3.7.4",
    "shiki": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "7.3.0",
    "vitest": "4.0.16"
  }
