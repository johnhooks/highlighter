{
  "name": "@bitmachina/highlighter",
  "version": "1.0.0-alpha.4",
  "type": "module",
  "description": "Highlight MDsveX files with the Shiki highlighter",
  "keywords": [
    "mdsvex",
    "shiki",
    "highlight",
    "svelte",
    "markdown"
  ],
  "homepage": "https://github.com/johnhooks/highlighter",
  "bugs": "https://github.com/johnhooks/highlighter/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnhooks/highlighter.git"
  },
  "author": {
    "name": "John Hooks",
    "url": "https://johnhooks.io"
  },
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "clean": "rimraf ./{dist,temp}",
    "clean:tsc": "rimraf ./lib",
    "clean:all": "yarn clean && yarn clean:tsc",
    "build:esm": "./scripts/esm.sh",
    "build:tsc": "tsc -b",
    "build:types": "./scripts/build-types.sh",
    "build:umd:cjs": "rollup --config",
    "build": "./scripts/build-pkg.sh",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts .",
    "prepare": "husky install",
    "release": "shipjs prepare"
  },
  "dependencies": {
    "hast-util-to-html": "8.0.3",
    "hast-util-to-string": "2.0.0",
    "hastscript": "7.1.0",
    "parse-numeric-range": "^1.3.0",
    "rehype-parse": "8.0.4",
    "shiki": "0.11.1",
    "unified": "10.1.2",
    "unist-util-visit": "4.1.1"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "7.33.7",
    "@rollup/plugin-json": "6.0.0",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-replace": "5.0.2",
    "@rollup/plugin-sucrase": "5.0.1",
    "@rollup/plugin-terser": "0.2.1",
    "@types/hast": "2.3.4",
    "@types/node": "18.11.11",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "prettier": "2.8.1",
    "rollup-plugin-filesize": "9.1.2",
    "shipjs": "^0.25.0",
    "ts-node": "10.9.1",
    "tslib": "2.4.1",
    "typescript": "4.9.4",
    "vitest": "0.25.8"
  }
}
