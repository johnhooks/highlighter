{
  "name": "@bitmachina/highlighter",
  "version": "1.0.0-alpha.7",
  "type": "module",
  "description": "Highlight MDsveX files with the Shiki highlighter",
  "keywords": [
    "mdsvex",
    "shiki",
    "highlight",
    "svelte",
    "markdown"
  ],
  "homepage": "https://johnhooks.io/projects/highlighter",
  "bugs": "https://github.com/johnhooks/highlighter/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnhooks/highlighter.git"
  },
  "author": {
    "name": "John Hooks",
    "url": "https://johnhooks.io"
  },
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
